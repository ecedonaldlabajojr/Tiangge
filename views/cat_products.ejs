<!-- _______________________ Import header _______________________-->
<%- include ('_layouts/header') %>

<div class="row">
    <% if (products && products.length > 0) { %>
    <% products.forEach(product => { %>
    <div class="col-xs-12 col-md-3 product-box">
        <a class="img-link" href="/products/<%= product.category %>/<%=product.slug %>"><img class="product-img"
                src="/product_images/<%= product._id %>/<%= product.image %>" alt="product-img"></a>
        <h4><%= product.name %></h3>
            <h6>â‚± <%= parseFloat(product.price).toFixed(2) %></h6>
            <a href="/product/<%= product.category %>/<%= product.id %>">View Details</a>
    </div>

    <% }) %>
    <% } else { %>
    <h2>No products found.</h2>
    <% } %>
</div>



















